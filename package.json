{
  "name": "ai-search-crawler",
  "version": "1.0.0",
  "description": "Website crawler that analyzes AI search readiness and provides optimization recommendations",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "test": "jest",
    "lint": "eslint .",
    "setup": "npm install && cd client && npm install",
    "install-client": "cd client && npm install",
    "postinstall": "cd client && npm install",
    "vercel-build": "cd client && npm install && npm run build"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "puppeteer": "^22.6.5",
    "@sparticuz/chromium": "^121.0.0",
    "cheerio": "^1.0.0-rc.12",
    "robots-parser": "^3.0.1",
    "lighthouse": "^11.7.1",
    "schema-inspector": "^2.0.2",
    "url-parse": "^1.5.10",
    "dotenv": "^16.4.5",
    "rate-limiter-flexible": "^5.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "keywords": [
    "seo",
    "ai-search",
    "crawler",
    "website-analysis",
    "google-ai-overview"
  ],
  "author": "AI Search Crawler",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}