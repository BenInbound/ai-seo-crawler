{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "SKIP_CLIENT_INSTALL=true npm ci --only=production"
  },
  "deploy": {
    "startCommand": "node server/worker.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
